<!DOCTYPE html>
<html>
<head>
  <title>Reset Password</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
  <script src="js/config.js"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">
  <div class="bg-white p-8 rounded shadow w-96">
    <h2 class="text-2xl font-bold mb-4">Set New Password</h2>
    <div id="error" class="text-red-500 mb-2"></div>
    <input type="password" id="password" placeholder="New password" class="w-full p-2 border rounded mb-4">
    <button id="update-password" class="bg-purple-600 text-white px-4 py-2 rounded w-full">Update Password</button>
  </div>
  <script>
    document.getElementById('update-password').addEventListener('click', async () => {
      const newPassword = document.getElementById('password').value;
      const errorDiv = document.getElementById('error');
      if (!newPassword) {
        errorDiv.innerText = 'Password required';
        return;
      }
      const { error } = await supabase.auth.updateUser({ password: newPassword });
      if (error) {
        errorDiv.innerText = error.message;
      } else {
        alert('Password updated! You can now login.');
        window.location.href = '/index.html';
      }
    });
  </script>
</body>
</html>